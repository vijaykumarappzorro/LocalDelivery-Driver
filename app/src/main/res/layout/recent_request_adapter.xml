<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imgcustomer"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_icon_pic"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp">
                <TextView
                    android:id="@+id/txtcustomername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vijay Kumar"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/txtcommenttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2 Minute ago"/>
                <TextView
                    android:id="@+id/txtproductheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtcustomername"
                    android:layout_marginTop="20dp"
                    android:text="Product"/>
                <TextView
                    android:id="@+id/txtpriceheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtcustomername"
                    android:layout_marginTop="20dp"
                    android:text="Price"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/txtdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Sofa and 1 Chair"
                    android:layout_below="@+id/txtpriceheading"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp" />
                <TextView
                    android:id="@+id/txtprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txtpriceheading"
                    android:text=" Rs. 200"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/txtdateheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/txtdescription"
                    android:text="Date"/>
                <TextView
                    android:id="@+id/txttimeheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/txtprice"
                    android:text="Time"/>
                <TextView
                    android:id="@+id/txtdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtdateheading"
                    android:text="04-OCT-2016"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/txttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtdateheading"
                    android:layout_alignParentRight="true"
                    android:text="5:00 PM"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black" />
                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtdate"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/txtpickheading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:layout_below="@+id/txtdate"
                        android:text="Pickup Address"/>
                    <TextView
                        android:id="@+id/txtdropheading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/txtdate"
                        android:text="Delivery Address"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout2"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/txtpickaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtpickheading"
                        android:text="7 pahse, Sector 70,Distt Punjab,Pinode -174003"
                        android:layout_weight="1"
                        android:layout_toLeftOf="@+id/txtdropaddress"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:id="@+id/txtdropaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtpickheading"
                        android:text="7 pahse, Sector 70,Distt Punjab,Pinode -174003"
                        android:layout_weight="1"
                        android:textColor="@android:color/black" />
                </LinearLayout>
                <Button
                    android:id="@+id/btnpick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_shape"
                    android:layout_below="@+id/layout3"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="PICKUP"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="20dp" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
